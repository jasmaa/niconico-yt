{
	"manifest_version": 2,
	"name": "niconico-yt",
	"version": "1.0",
	"description": "NicoNico style comments on Youtube",
	"icons": {
		"48": "icons/logo_48.png",
		"96": "icons/logo_96.png"
	},
	"permissions" : [
		"*://*.googleapis.com/youtube/v3/commentThreads/*"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/watch*"],
			"js": ["content.js"]
		}
	]
}