{
	"manifest_version": 2,
	"name": "niconico-yt",
	"version": "1.0",
	"description": "NicoNico style comments on Youtube",
	"permissions" : [
		"*://*.googleapis.com/youtube/v3/commentThreads/*",
		"webNavigation",
		"tabs"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/watch*"],
			"js": ["content.js"]
		}
	]
}